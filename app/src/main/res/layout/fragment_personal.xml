<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
              android:orientation="vertical"
             android:layout_height="match_parent"
             tools:context=".ui.main.PersonalFragment">

    <ImageView android:layout_width="match_parent" android:layout_height="210dp"
               android:src="@drawable/ic_person_light"/>
    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
              android:id="@+id/txtUsername"
    android:gravity="center"/>

    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
    android:gravity="center" android:text="Budget"/>

    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
    android:gravity="center" android:id="@+id/txtBudget"/>

</LinearLayout>